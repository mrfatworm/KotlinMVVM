<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mrfatworm.kotlinmvvm" >

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KotlinMVVM"
        android:usesCleartextTraffic="true">
        <activity android:name=".ExpenseActivity" >
        </activity>
        <activity android:name=".CameraActivity" />
        <activity
            android:name=".MaterialActivity"
            android:label="@string/title_activity_material"
            android:theme="@style/Theme.KotlinMVVM.NoActionBar" />
        <activity android:name=".mvvm.GuessActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".mvp.MvpActivity" />
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>